<!DOCTYPE html>
<html>
  <head>
    <title>User List</title>
    <script type="text/javascript" src="/javascripts/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="/javascripts/bootstrap.min.js"></script>
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
  </head>
  <body>
    <h1>List User</h1>
    <table class="table table-striped table-borderd table-hover">
      <thead>
        <th>ID</th>
        <th>Email</th>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Username</th>
        <th>Password</th>
        <th><i class="glyphicon glyphicon-trash"></i></th>
      </thead>
      <tbody>
        <% for(var i = 0; i < AllUser.length; i++) { %>
          <tr>
            <td><%= AllUser[i]._id %></td>
            <td><%= AllUser[i].email %></td>
            <td><%= AllUser[i].first_name %></td>
            <td><%= AllUser[i].last_name %></td>
            <td><%= AllUser[i].username %></td>
            <td><%= AllUser[i].password %></td>
            <td>
              <form class="" action="/users/deleteUser" method="post">
                <input type="hidden" name="_id" value="<%= AllUser[i]._id%>">
                <button type="submit" name="<%= AllUser[i]._id%>" onclick="window.location.reload()"><i class="glyphicon glyphicon-trash"></i></button>
              </form>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
